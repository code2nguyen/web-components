---
import { getCollection } from 'astro:content';

interface Props {
	componentId: string;
}

const base = import.meta.env.BASE_URL
const allComponents = await getCollection('components');
const hoverClass = "hover:bg-sky-100  hover:backdrop-blur-lg"
const { componentId } = Astro.props
---

<ul class="flex flex-col ml-14 max-w-fit">
    {allComponents.map(component => (
        <a href={`${base}/components/${component.slug}`}>
            <li class=`nav-item ${componentId == component.slug ? 'bg-sky-300': hoverClass}`>
                {component.data.title}
            </li>
        </a>
      ))}
