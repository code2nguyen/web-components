{
  "name": "@c2n/{{ dashCase name }}",
  "version": "{{ pkg 'version' }}",
  "type": "module",
  "main": "dist/{{ dashCase name }}.js",
  "exports": {
    ".": {
      "default": "./dist/{{ dashCase name }}.js",
      "types": "./types/src/{{ dashCase name }}.d.ts"
    },
    "./custom-elements.json": "./custom-elements.json"
  },
  "files": [
    "dist",
    "types"
  ],
  "keywords": [
    "{{ dashCase name }}",
    "web component",
    "lit"
  ],
  "author": "code2nguyen@gmail.com",
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/code2nguyen/web-components.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "wireit",
    "build:only": "vite build",
    "type-check": "wireit"
  },
  "wireit": {
    "type-check": {
      "dependencies": [
        "../wc-utils:build"        
      ],
      "command": "tsc -p tsconfig.lib.json --composite false"
    },
    "build": {
      "dependencies": [
        "type-check"        
      ],
      "command": "vite build"
    }
  },
  "dependencies": {
    "@c2n/wc-utils": "{{ pkg 'version' }}",
    "lit": "3.1.2"
  },
  "devDependencies": {
    "@c2n/config": "*"
  },
  "customElements": "custom-elements.json"
}
